<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_sno"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/table_cantent_cell_bg"
            android:text="s.no"
            android:textStyle="bold"
            android:layout_weight="0.2"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_customer"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.2"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/table_cantent_cell_bg"
            android:text="custome "
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_jobtype"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/table_cantent_cell_bg"
            android:text="jobtype"
            android:layout_weight="0.2"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/lltiming"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/table_cantent_cell_bg"
            >
            <TextView
                android:id="@+id/txt_timing"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_weight="0.2"
                android:textStyle="bold"
                android:text="Timing"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llaction"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/table_cantent_cell_bg">
            <TextView
                android:id="@+id/txt_action"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:text="Action"
                android:layout_weight="0.2"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/black"
                />
            <Button
                android:id="@+id/btn_contactcustomer"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:scaleType="center"
                android:layout_weight="0.2"
                android:textColor="@color/white"
                android:text="Contact Customer"
                android:textStyle="bold"
                android:textSize="13sp"
                android:background="#04d194"
                android:layout_gravity="center"
                />
            <Button
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:scaleType="center"
                android:textColor="@color/white"
                android:text="Close"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_weight="0.2"
                android:layout_gravity="center"
                android:background="#fc686d"
                />
            <Button
                android:id="@+id/btn_moredetails"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:scaleType="center"
                android:textColor="@color/white"
                android:paddingRight="@dimen/_7sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:text="More Details"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="0.2"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/_5sdp"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:background="#3c6fff"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
