<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/_14sdp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_35ssp"
            android:background="#f9e9b8"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact To"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/_12sdp"
                android:textColor="#8e5231"
                android:textSize="@dimen/_14ssp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profilename"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/_6sdp"
                android:textColor="#4b61e2"
                android:textSize="@dimen/_14ssp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_80sdp"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Compose a Message"
                android:textColor="@color/jet_black"
                android:textSize="@dimen/_14ssp"
                />
            <EditText
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:paddingLeft="@dimen/_6sdp"
                android:background="@drawable/borders_gray"
                android:gravity="top"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="Enter Here"
                android:inputType="textMultiLine|textCapSentences"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:gravity="end"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_send"
                style="@style/MaterialButton_Style"
                android:backgroundTint="@color/green"
                android:layout_width="@dimen/_82sdp"
                android:layout_height="@dimen/_42sdp"
                android:gravity="center"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:text="Send"
                android:layout_marginEnd="@dimen/_5sdp"
                android:elevation="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                app:cornerRadius="@dimen/_3sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_close"
                style="@style/MaterialButton_Style"
                android:layout_width="@dimen/_82sdp"
                android:layout_height="@dimen/_42sdp"
                android:backgroundTint="@color/red"
                android:gravity="center"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:text="Close"
                android:elevation="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                app:cornerRadius="@dimen/_3sdp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>