<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_sno"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/table_cantent_cell_bg"
            android:text="s.no"
            android:textStyle="bold"
            android:layout_weight="0.2"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_customer"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="0.2"
            android:textColor="@color/black"
            android:background="@drawable/table_cantent_cell_bg"
            android:text="custome "
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_jobtype"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/table_cantent_cell_bg"
            android:text="jobtype"
            android:layout_weight="0.2"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp" />



        <TextView
            android:id="@+id/txt_timing"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:background="@drawable/table_cantent_cell_bg"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="0.2"
            android:text="Timing"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/llaction"
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:background="@drawable/table_cantent_cell_bg">
            <TextView
                android:id="@+id/txt_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:text="Action"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/black"
                />
            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Confirm"
                android:padding="@dimen/_5sdp"
                android:textSize="12sp"
                android:background="#04d194"
                android:layout_gravity="center"
                />
            <Button
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:scaleType="center"
                android:textColor="@color/white"
                android:text="Close"
                android:textSize="12sp"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_gravity="center"
                android:background="#fc686d"
                />
            <Button
                android:id="@+id/btn_moredetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:scaleType="center"
                android:textColor="@color/white"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_7sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:text="More Details"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:background="#3c6fff"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
