<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        style="@style/Scrollview_Style">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/_14sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp">

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background_rectangle_nostroke"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>


            <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_22sdp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/txt_profilename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="0.5"
        android:text=""
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/_10ssp"
        android:textSize="@dimen/_15ssp"
        android:minHeight="@dimen/_30sdp"
        android:textAllCaps="true"
        android:textColor="#6965f8"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/btn_edit"
        android:layout_width="@dimen/_65ssp"
        android:layout_height="@dimen/_35ssp"
        android:layout_weight="0.5"
        app:cornerRadius="@dimen/_3sdp"
        android:padding="@dimen/_5ssp"
        android:background="@drawable/edit"
        android:layout_gravity="center_horizontal"
        app:strokeColor="@color/red"
        app:strokeWidth="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_5ssp"
        android:src="@drawable/ic_edit"/>
       />
</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5ssp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:drawablePadding="@dimen/_7sdp"
                        android:gravity="center_vertical"
                        android:text="Email   : "
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginLeft="@dimen/_10ssp"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_weight="0.1"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/txt_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_vertical"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_7sdp"
                    android:gravity="center_vertical"
                    android:text="Mobile Number   : "
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_weight="0.1"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/txt_mobileno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_vertical"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_7sdp"
                    android:gravity="center_vertical"
                    android:text="State   : "
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_weight="0.1"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/txt_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_vertical"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_7sdp"
                    android:gravity="center_vertical"
                    android:text="City/District   : "
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/red"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_weight="0.1"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/txt_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_vertical"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_7sdp"
                    android:gravity="center_vertical"
                    android:text="Area   : "
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_weight="0.1"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/txt_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/_12ssp"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorPrimary"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_7sdp"
                    android:gravity="center_vertical"
                    android:text="Pincode   : "
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_weight="0.1"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/txt_pincode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/_13ssp"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorPrimary"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tradsmennoofemployee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_7sdp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_weight="0.1"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/txt_noofemployeecount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/_13ssp"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorPrimary"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_primarytrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_7sdp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_weight="0.1"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/txt_primarytradestype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/_13ssp"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorPrimary"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>